{
  "name": "vscode-task-buttons",
  "displayName": "Task Buttons",
  "description": "Add your tasks as buttons in the status bar",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerwmiles/vscode-task-buttons"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "publisher": "spencerwmiles",
  "contributes": {
    "configuration": [
      {
        "title": "VsCodeTaskButtons",
        "properties": {
          "VsCodeTaskButtons.showCounter": {
            "type": "boolean",
            "default": true,
            "description": "Show the task button counter"
          },
          "VsCodeTaskButtons.tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string",
                  "description": "Label that appears in the taskbar"
                },
                "task": {
                  "type": ["string", "null"],
                  "description": "The vscode task-label to execute"
                },
                "alignment": {
                  "type": "string",
                  "enum": [
                    "left",
                    "right"
                  ],
                  "default": "left",
                  "description": "Alignment of the button in the taskbar"
                },
                "conditions": {
                  "type": "array",
                  "additionalProperties": false,
                  "default": [],
                  "description": "TODO",
                  "items": {
                    "type": ["object", "null"],
                    "description": "A condition for the task button to be visible",
                    "additionalProperties": false,
                    "properties": {
                      "condition": {
                        "type": ["string", "number", "boolean"]
                      },
                      "operator": {
                        "type": "string",
                        "default": "==",
                        "enum": [
                          "==",
                          "===",
                          "!=",
                          "!==",
                          "<",
                          "<=",
                          ">",
                          ">="
                        ]
                      },
                      "value": {
                        "type": ["string", "number", "boolean"]
                      }
                    }
                  }
                },
                "tasks": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "task": {
                        "type": "string",
                        "description": "The vscode task-label to execute"
                      },
                      "label": {
                        "type": "string",
                        "description": "Label that appears in the \"quick pick list\""
                      },
                      "description": {
                        "type": ["string", "null"],
                        "description": "Description to show next to the task label"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "default": [],
                  "description": "Tasks listed in a \"quick pick list\" when clicked"
                },
                "tooltip": {
                  "type": ["string", "null"],
                  "description": "Tooltip to show when hovering over the button (defaults to task name)"
                }
              }
            },
            "additionalProperties": false,
            "default": [],
            "description": "Define the tasks in which you would like to have buttons added for"
          }
        }
      }
    ]
  },
  "main": "./build/main.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "clean": "npm ci",
    "lint": "eslint ./ --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/vscode": "^1.56.0",
    "eslint": "^8.8.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.0",
    "typescript": "^4.5.5",
    "@vscode/test-electron": "^2.1.2",
    "@vscode/vsce": "^2.2.0"
  },
  "dependencies": {}
}