{
  "name": "vscode-task-buttons",
  "displayName": "Task Buttons",
  "description": "Add your tasks as buttons in the status bar",
  "version": "1.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/spencerwmiles/vscode-task-buttons"
  },
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "publisher": "spencerwmiles",
  "contributes": {
    "configuration": [
      {
        "title": "VsCodeTaskButtons",
        "properties": {
          "VsCodeTaskButtons.showCounter": {
            "type": "boolean",
            "default": true,
            "description": "Show the task button counter"
          },
          "VsCodeTaskButtons.tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string",
                  "description": "Label that appears in the taskbar"
                },
                "task": {
                  "type": ["string", "null"],
                  "description": "The vscode task-label to execute"
                },
                "alignment": {
                  "type": "string",
                  "enum": [
                    "left",
                    "right"
                  ],
                  "default": "left",
                  "description": "Alignment of the button in the taskbar"
                },
                "tasks": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "label": {
                        "type": "string",
                        "description": "Label that appears in \"quick pick list\""
                      },
                      "task": {
                        "type": "string",
                        "description": "The vscode task-label to execute"
                      },
                      "description": {
                        "type": ["string", "null"],
                        "description": "Description to show next to the task label (optional)"
                      }
                    }
                  },
                  "additionalProperties": false,
                  "default": [],
                  "description": "Tasks listed in a \"quick pick list\" when clicked"
                },
                "tooltip": {
                  "type": "string",
                  "description": "Optional tooltip to show when hovering over the button (defaults to task name)"
                }
              }
            },
            "additionalProperties": false,
            "default": [],
            "description": "Define the tasks in which you would like to have buttons added for"
          }
        }
      }
    ]
  },
  "main": "./build/main.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "clean": "npm ci",
    "lint": "eslint ./ --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.16.0",
    "@types/vscode": "^1.77.0",
    "eslint": "^8.38.0",
    "glob": "^10.0.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {}
}